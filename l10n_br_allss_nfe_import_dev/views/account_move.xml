<odoo>
    <data>
        <record id="l10n_br_allss_nfe_import_view_move_form_inherit" model="ir.ui.view">
            <field name="name">l10n_br_allss.nfe.import.account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <button type="object" name="l10n_br_allss_action_view_picking" class="oe_stat_button" icon="fa-truck" invisible='picking_ids == false'>
                        <field name="picking_count" widget="statinfo" string="Shipments"/>
                        <field name="picking_ids" invisible="1"/>
                    </button>
                </xpath>

                <xpath expr="//page[@name='other_info']/group" position="inside">
                    <group string="Movimentação de Estoque" name="group_allss_picking_type">
                        <field name="l10n_br_allss_picking_type_id"/>
                    </group>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
