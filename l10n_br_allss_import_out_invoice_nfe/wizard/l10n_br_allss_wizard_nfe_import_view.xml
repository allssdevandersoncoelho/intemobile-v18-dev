    <record id="action_l10n_br_allss_wizard_nfe_out_invoice_import" model="ir.actions.act_window">
        <field name="name">Importação de XML da NFe - Vendas</field>
        <field name="res_model">l10n.br.allss.wizard.nfe.import</field>
        <field name="view_id" ref="view_l10n_br_allss_wizard_nfe_out_invoice_import_form"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'allss_nfe_import': True, 'allss_nfe_import_type': 'out_invoice'}</field>
    </record>

    <menuitem id="menu_l10n_br_allss_wizard_nfe_out_invoice_import" name="Importar NF-e (XML) - Vendas"
