<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="view_l10n_br_allss_wizard_nfe_out_invoice_import_form">
        <field name="name">ALLSS Importação de NFe - Vendas</field>
        <field name="model">l10n.br.allss.wizard.nfe.import</field>
        <field name="arch" type="xml">
            <form string="Importação de NFe - Vendas">
                <field name="state" invisible="1" />
                <group invisible="state != 'ok'">
                    <field name="l10n_br_allss_import_batch_zip"/>
                    <field name="l10n_br_allss_nfe_xml" invisible="l10n_br_allss_import_batch_zip == True"/>
                    <field name="l10n_br_allss_skip_wrong_xml" invisible="l10n_br_allss_import_batch_zip == False"/>
                    <field name="l10n_br_allss_zip_file" invisible="l10n_br_allss_import_batch_zip == False"/>
                    <field name="l10n_br_allss_journal_id"/>
                    <field name="l10n_br_allss_account_analytic_id"/>
                    <field name="l10n_br_allss_picking_type_id" />
                    <field name="l10n_br_allss_group_id" required="1"/>
                    <field name="l10n_br_allss_account_account_id" required="1"/>
                </group>
                <group invisible="state != 'error'">
                    <div>
                        O arquivo zip abaixo contém os arquivos xml que não foram importados!
                    </div>
                    <field name="l10n_br_allss_zip_file_error_name" invisible="1" />
                    <field name="l10n_br_allss_zip_file_error" filename="l10n_br_allss_zip_file_error_name"/>
                </group>
                <h2>
                    <span class="o_form_label" invisible="state != 'done'">Importação concluída com sucesso!</span>
                </h2>
                <button name="l10n_br_allss_action_import_nfe_out_invoice"
                        string="Importar" type="object"
                        class="oe_highlight"
                        invisible="state in ('error', 'done')"
                />
            </form>
        </field>
    </record>


